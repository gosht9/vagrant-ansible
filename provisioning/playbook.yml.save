- hosts: all

	vars:
	  base_packages:
	   - nodejs
	   - express
	   - socket.io

	tasks:
	  #- name: Clave publica de Node.js
	  ---
	  
	  - name: a√±adir URL del repositorio
	    apt_repository: repo='deb https://deb.nodesource.com/setup_4.x | sudo -E bash -'	
	  
	  - name: Actualizacion
	    apt: update=yes

 	  - name: Instalar node.js
	    apt: name={{ item }} state=latest update_cache=yes cache_valid_item=3600
	    with_items: base_packages
		
